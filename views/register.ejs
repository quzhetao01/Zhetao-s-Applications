<%- include ("partials/header") %>
<div class="register container mt-5 p-5">
  <h1 class="title">Register</h1>
  <form action="/register" method="POST">
    <div class="mb-3 mt-3">
      <label for="usernameInput" class="form-label">Username</label>
      <input type="text" name="username" class="form-control" id="usernameInput" placeholder="Enter your username here">
    </div>
    <div class="mb-3">
      <label for="passwordInput" class="form-label">Password</label>
      <input type="password" name="password" class="form-control" id="passwordInput" placeholder="Enter your password here">
    </div>
    <button type="submit" class="btn btn-dark">Register</button>
    <a href="/auth/google" class="btn btn-block btn-social btn-google">
      <span class="fa fa-google"></span> Continue with Google
    </a>
    <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook">
      <span class="fa fa-facebook"></span> Continue with Facebook
    </a>

  </form>
</div>

<%- include ("partials/footer") %>